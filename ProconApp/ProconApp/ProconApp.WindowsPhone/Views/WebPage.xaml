<prism:VisualStateAwarePage
    x:Class="ProconApp.Views.WebPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProconApp.Views"
    xmlns:hlp="using:ProconApp.Helper"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="using:Microsoft.Practices.Prism.StoreApps"
    xmlns:mvvm="using:Microsoft.Practices.Prism.Mvvm"
    mc:Ignorable="d"   
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <ProgressBar x:Name="progressBar" Height="15" VerticalAlignment="Top"  IsIndeterminate="True"/>
        <WebView Source="{Binding PageURL}"  NavigationCompleted="WebView_NavigationCompleted" NavigationStarting="WebView_NavigationStarting"  Height="630" VerticalAlignment="Top"  Margin="0,15,0,0" />
    </Grid>
</prism:VisualStateAwarePage>
