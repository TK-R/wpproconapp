<prism:VisualStateAwarePage
    x:Class="ProconApp.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProconApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="using:Microsoft.Practices.Prism.StoreApps"
    xmlns:mvvm="using:Microsoft.Practices.Prism.Mvvm"
    mc:Ignorable="d"   
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <prism:VisualStateAwarePage.BottomAppBar>
        <CommandBar Height="17">
            <AppBarButton Icon="Setting" Command="{Binding SettingCommand}" Label="設定"/>
        </CommandBar>
    </prism:VisualStateAwarePage.BottomAppBar>

    <Grid>
        <Pivot Title="プロコン2015" Margin="0,-1,0,1">
            <PivotItem Header="ホーム" Margin="20,0,20,0">
                <ScrollViewer>
                    <Grid>
                        <StackPanel HorizontalAlignment="Left" Height="150" Margin="10,10,0,0" VerticalAlignment="Top" Width="342">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="お知らせ" Grid.Column="0" Style="{ThemeResource HeaderTextBlockStyle}"  FontSize="32" TextWrapping="Wrap" HorizontalAlignment="Left" Width="190"/>
                                <TextBlock Text="全て表示" Grid.Column="1" Style="{ThemeResource HeaderTextBlockStyle}"  FontSize="20" TextAlignment="Right" TextWrapping="Wrap" Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Right" Width="87"/>
                            </Grid>
                            <ListView   Margin="0,5,0,30"
                                    Height="100"
                                    ItemsSource="{Binding NoticeItemList}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Height="20" Margin="0" >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" FontSize="18" Text="{Binding Date}"/>
                                            <TextBlock Grid.Column="1" FontSize="18" Text="{Binding Title}"/>

                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Left" Height="150" Margin="10,180,0,0" VerticalAlignment="Top" Width="342">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="競技結果速報" Grid.Column="0" Style="{ThemeResource HeaderTextBlockStyle}"  FontSize="32" TextWrapping="Wrap" HorizontalAlignment="Left" Width="190"/>
                                <TextBlock Text="全て表示" Grid.Column="1" Style="{ThemeResource HeaderTextBlockStyle}"  FontSize="20" TextAlignment="Right" TextWrapping="Wrap" Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Right" Width="87"/>
                            </Grid>
                            <ListView Margin="0,5,0,30"
                                      Height="100"
                                    ItemsSource="{Binding ResultItemList}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Height="20" Margin="0" >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0"  FontSize="18" Text="{Binding Date}"/>
                                            <TextBlock Grid.Column="1" FontSize="18" Text="{Binding Title}"/>

                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Left" Height="400" Margin="10,350,0,0" VerticalAlignment="Top" Width="342">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="会場フォト" Grid.Column="0" Style="{ThemeResource HeaderTextBlockStyle}"  FontSize="32" TextWrapping="Wrap" HorizontalAlignment="Left" Width="190"/>
                                <TextBlock Text="全て表示" Grid.Column="1" Style="{ThemeResource HeaderTextBlockStyle}"  FontSize="20" TextAlignment="Right" TextWrapping="Wrap" Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Right" Width="87"/>
                            </Grid>
                            <TextBlock Text="{Binding PhotoDate}" Style="{ThemeResource HeaderTextBlockStyle}"  FontSize="24" Margin="0,5,0,0" TextWrapping="Wrap"/>
                            <Image Source="{Binding PhotoURL}" Height="250"  Stretch="Uniform" Margin="0,-10,0,0" />
                            <TextBlock Text="{Binding PhotoTitle}" Style="{ThemeResource HeaderTextBlockStyle}" TextAlignment="Center"  FontSize="24" TextWrapping="Wrap" Margin="0,0,-0.333,0"/>

                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </PivotItem>
            <PivotItem Header="ソーシャル">

                <ListView Margin="0,0,-0.333,-0.167"
                                    ItemsSource="{Binding SocialItemList}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="10" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="52"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Image Grid.Column="0" Margin="5" Source="{Binding IconURL}" VerticalAlignment="Top" />
                                <StackPanel Orientation="Vertical" Grid.Column="1" Margin ="2,0,0,0">
                                    <Grid HorizontalAlignment="Stretch">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" FontSize="17" Text="{Binding Name}"/>
                                        <TextBlock Grid.Column="1" FontSize="14" Text="{Binding ScreenName}" Foreground="Gray" Margin="5,0,0,0" VerticalAlignment="Bottom"/>
                                        <TextBlock Grid.Column="2" FontSize="14" Text="{Binding Date}" Foreground="Gray" Margin="-5,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                                    </Grid>
                                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Tweet}" FontSize="14" Width="280" Margin="4"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </PivotItem>
        </Pivot>

    </Grid>
</prism:VisualStateAwarePage>
